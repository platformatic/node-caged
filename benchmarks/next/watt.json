{
  "$schema": "https://schemas.platformatic.dev/@platformatic/next/3.32.0.json",
  "runtime": {
    "logger": {
      "level": "{LOG_LEVEL}"
    },
    "verticalScaler": {
      "enabled": false
    },
    "server": {
      "hostname": "{HOSTNAME}",
      "port": "{PORT}",
      "backlog": "{BACKLOG}" 
    },
    "metrics": {
      "enabled": "{PLT_SERVER_METRICS}"
    },
    "health": {
      "enabled": "{PLT_SERVER_HEALTH}",
      "maxHeapTotal": "2GB",
      "maxYoungGeneration": "256MB"
    },
    "managementApi": "{PLT_MANAGEMENT_API}",
    "workers": {
      "static": "{WORKERS}"
    }
  }
}
